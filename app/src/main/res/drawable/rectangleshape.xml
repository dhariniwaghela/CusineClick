<!-- res/drawable/rounded_rectangle.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid color for the rectangle -->
    <solid android:color="@android:color/white" /> <!-- Set the fill color -->

    <!-- Border color and width -->
    <stroke
        android:width="3dp"
    android:color="@color/grey_font" /> <!-- Set the border color -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="8dp" /> <!-- Set the corner radius -->

</shape>
